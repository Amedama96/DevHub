<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>DevHub</title>
    <meta name="apple-mobile-web-app-capable" content="yes"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0 user-scalable=no">
    <meta name="description" content="DevHub">
    <meta name="author" content="Naoki Kodama">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script type="text/javascript" src="/javascripts/html5.js"></script>
    <![endif]-->

    <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery-ui.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="/javascripts/blog.min.js"></script>
    <link href="/stylesheets/blog.min.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
  </head>
  <body style=":
    background-color: white;
    background-attachment: fixed;
    background-position: center top;
    background-repeat:  repeat;
    padding-top: 60px;">

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="/">DevHub - blog</a>

          <form id="search_form" class="navbar-search pull-left">
            <input type="text" class="search-query" placeholder="Search" data-link="keyword">
          </form>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <div id="blog_input_form">
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span9">
          <div id="blog_list">
          </div>
        </div>
        <div class="span3">
          <ul id="index_list" class="nav nav-pills nav-stacked">
          </ul>
        </div>
      </div>
    </div>

    <!-- JsRender Templates -->
    <script id="blogInputTmpl" type="text/x-jsrender">
      <textarea id="blog_form" class="" placeholder="Paste here" data-link="input_text"></textarea>
      <button id="save_btn" class="btn btn-info">Save</button>
    </script>
 
    <script id="blogBodyTmpl" type="text/x-jsrender">
      <div id="{{:_id}}" class="blog-body">
        <div class="blog-header">
          <strong data-link="name"></strong> updated <span data-livestamp="{{:date}}"></span>
          <div style="float: right">
            <span class="edit-blog"><i class="icon-pencil"></i></span> <span class="remove-blog"><i class="icon-remove"></i></span>
          </div>
        </div>
        <pre class="text-base-style"><div class="code-out"></div></pre>
        <div class="edit-form" style="display: none">
          <div>
            <textarea class="edit-area" data-link="text"></textarea>
          </div>
          <button class="btn btn-default cancel-edit">Cancel</button>
          <div style="float: right">
            <button class="btn btn-info update-blog">Update</button>
          </div>
        </div>
      </div>
    </script>

    <script id="blogIndexTmpl" type="text/x-jsrender">
      <li>
        <a href="#" data-id="{{:_id}}">{^{:title}} - <span data-livestamp="{{:date}}"></span></a>
      </li>
    </script>

    <div id="share_memo_pre_tmp"></div>
  </body>
</html>


