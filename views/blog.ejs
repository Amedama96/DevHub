<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>DevHub</title>
    <meta name="apple-mobile-web-app-capable" content="yes"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0 user-scalable=no">
    <meta name="description" content="DevHub">
    <meta name="author" content="Naoki Kodama">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script type="text/javascript" src="/javascripts/html5.js"></script>
    <![endif]-->

    <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery-ui.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="/javascripts/blog.min.js"></script>
    <link href="/stylesheets/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/blog.min.css" media="screen" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
  </head>
  <body style="
    background-attachment: fixed;
    background-position: center top;
    background-repeat:  repeat;
    padding-top: 60px;">

    <div id="loading">
      <img src="img/blog_loader.gif" >
    </div>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="/">DevHub - <span id="blog_count">

            <span class="count" data-bind="text: item_count"></span><span class="unit"> blogs.</span>
          </span></a>
          <div id="blog_navi">
            <ul class="nav pull-right">
              <li><a href="#tags_modal" rel="tooltip" title="Tags" data-toggle="modal" href="#"><i class="icon-white icon-tags"></i></a></li>
              <li><a id="scroll_top" href="#" data-bind="click: moveTop"><i class="icon-white icon-arrow-up"></i></a></li>
            </ul>

            <form id="search_form" class="navbar-form pull-right" data-bind="submit: submitSearch">
              <input type="text" class="search-query input-middle" placeholder="foo name:hoge tag:fuga" data-bind="textInput: keyword">
                <i id="search_clear" class="icon-remove" data-bind="visible: keyword() != '', click: searchClear"></i>
            </form>

            <form id="matched_control" class="navbar-form pull-right">
              <div class="btn-group">
                <button id="prev_match" class="btn btn-inverse" data-bind="visible: is_visible_navi, click: movePrevMatch"><i class="icon-chevron-up icon-white"></i></button>
                <button id="next_match" class="btn btn-inverse" data-bind="visible: is_visible_navi, click: moveNextMatch"><i class="icon-chevron-down icon-white"></i></button>
              </div>
            </form>

            <span id="matched_count" class="navbar-text pull-right" data-bind="visible: is_visible_navi">
              <span data-bind="text: matched_index"></span>/<span data-bind="text: matched_num"></span>
            </span>
            <span id="matched_title" class="navbar-text pull-right" data-bind="visible: is_visible_navi">
              <span data-bind="text: matched_title"></span>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div id="index_area" class="span4">
          <div class="dummy-space"></div>
          <div class="row-fluid">
            <ul id="index_list" class="nav nav-tabs nav-stacked"></ul>
            <div id="load_more_from_index"></div>
            <div class="dummy-space"></div>
          </div>
        </div>

        <div id="blog_area" class="span8">
          <div class="dummy-space"></div>
          <div class="row-fluid" id="blog_input_area">
            <div class="span10">
              <div id="blog_input_form">
                <textarea id="blog_form" style="width: 100%; resize: vertical; height: 18px;  line-height: 18px;" rows="1" autocomplete="off" placeholder="Write here" data-bind="textInput: input_text, event: {keydown: function(data,event){ return keydownBlogForm(data,event,$element)}}"></textarea>
              </div>
            </div>
            <div class="span2">
              <button id="save_btn" class="btn btn-primary">Save</button>
            </div>
          </div>
          <ul id="blog_list"></ul>
          <div class="dummy-space"></div>
        </div>
      </div>
    </div>

    <!-- modal -->
    <div id="tags_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Tags</h3>
      </div>
      <div class="modal-body">
        <div id="tag_list" data-bind="foreach: tags">
          <span class="tag-name label" data-bind="attr: {'data-tag': tag_name}, click: $parent.selectTag">
            <span data-bind="text: tag_name"></span> (<span data-bind="text: count"></span>)
          </span>
        </div>
      </div>
    </div>

    <!-- JsRender Templates -->
    <script id="blogBodyTmpl" type="text/x-jsrender">
      <li id="{{:_id}}" class="blog-body">
        <div class="alert alert-info">
          <h1 class="blog-title">{^{:title}}</h1>
          <div class="blog-header">
          {^{if avatar != null && avatar != ""}}
            By <span class="login-symbol" data-name="{{>name}}" title="{{>name}}" rel="tooltip"><img class="avatar" src="{{>avatar}}"></span> updated <span class="timestamp" data-livestamp="{{:date}}"></span>
          {^{else}}
            By <strong data-link="name"></strong> updated <span data-livestamp="{{:date}}"></span>
          {^{/if}}
          <span class="edit-blog"><i class="icon-pencil"></i></span>
          <span class="remove-blog"><i class="icon-trash"></i></span>
          <a href="blog?id={{:_id}}" target="_blank"> Permalink</a>
          </div>
        </div>
        <pre class="text-base-style"><div class="code-out"></div></pre>
        <div class="edit-form" style="display: none">
          <div>
            <textarea class="edit-area" data-link="text"></textarea>
          </div>
          <div class="blog-action">
            <button class="btn btn-info btn-mini update-notify-blog">Update and notify</button>
            <button class="btn btn-info update-blog">Update</button>
            <button class="btn btn-default cancel-edit">Cancel</button>
          </div>
        </div>
      </li>
    </script>

    <script id="blogIndexTmpl" type="text/x-jsrender">
      <li class="index-body">
        <a class="index-body-link" href="#" data-id="{{:_id}}">
          <div class="share-memo-title">
            {^{if matched}}<span class="label label-important">{^{:matched}}</span>{{/if}}
            {^{:title}}
          </div>

          {^{if indexes && indexes.length}}
          <i class="icon-align-left indexes-link"></i>
          {{/if}}

          <div class="writer">
            {^{if avatar != null && avatar != ""}}
              <span class="login-symbol" data-name="{{>name}}" title="{{>name}}" rel="tooltip"><img class="avatar" src="{{>avatar}}"></span> - <span class="timestamp" data-livestamp="{{:date}}"></span>
            {^{else}}
              {^{:name}} - <span class="timestamp" data-livestamp="{{:date}}"></span>
            {^{/if}}
         </div>
        </a>
        <ul class="index-ul" data-id="{{:_id}}" data-link="style{>display_indexes}">
          {^{for indexes}}
            <li><a class="index-li" href="#">{^{:header}}</a></li>
          {{/for}}
        </ul>
      </li>
    </script>

    <div id="share_memo_pre_tmp"></div>
  </body>
</html>


