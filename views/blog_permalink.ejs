<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>DevHub</title>
    <meta name="apple-mobile-web-app-capable" content="yes"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0 user-scalable=no">
    <meta name="description" content="DevHub">
    <meta name="author" content="Naoki Kodama">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script type="text/javascript" src="/javascripts/html5.js"></script>
    <![endif]-->

    <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery-ui.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="/javascripts/blog_permalink.min.js"></script>
    <link href="/stylesheets/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/blog_permalink.min.css" media="screen" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <script type="text/javascript">
      var BLOG_ID = "<%= id %>";
    </script>
  </head>
  <body style=":
    background-attachment: fixed;
    background-position: center top;
    background-repeat:  repeat;
    padding-top: 60px;">

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="/">DevHub - blog</a>
          <ul class="nav pull-right">
            <li><a href="/blog" target="_blank"   rel="tooltip" title="Blog Page"><i class="icon-white icon-book"></i></a></li>
            <li><a href="/upload" target="_blank" rel="tooltip" title="Uploaded Files Page"><i class="icon-white icon-file"></i></a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div id="index_header_area" class="span4">
          <div class="dummy-space"></div>
          <ul id="index_header"></ul>
        </div>
        <div id="blog_permalink_area" class="span8">
          <div class="dummy-space"></div>
          <ul id="blog_list"></ul>
        </div>
      </div>
    </div>

    <!-- JsRender Templates -->
    <script id="blogBodyTmpl" type="text/x-jsrender">
      <li id="{{:_id}}" class="blog-body">
        <div class="alert alert-info">
          <h1 class="blog-title">{^{:title}}</h1>
          <div class="blog-header">
            {^{if avatar != null && avatar != ""}}
              By <span class="login-symbol" data-name="{{>name}}" title="{{>name}}" rel="tooltip"><img class="avatar" src="{{>avatar}}"></span> updated <span class="timestamp" data-livestamp="{{:date}}"></span>
            {^{else}}
              By <strong data-link="name"></strong> updated <span data-livestamp="{{:date}}"></span>
            {^{/if}}
            <span class="edit-blog"><i class="icon-pencil"></i></span>
            <span class="remove-blog"><i class="icon-trash"></i></span>
          </div>
        </div>
        <pre class="text-base-style"><div class="code-out"></div></pre>
        <div class="edit-form" style="display: none">
          <div>
            <textarea class="edit-area" data-link="text"></textarea>
          </div>
          <div class="blog-action">
            <button class="btn btn-info btn-mini update-notify-blog">Update and notify</button>
            <button class="btn btn-info update-blog">Update</button>
            <button class="btn btn-default cancel-edit">Cancel</button>
          </div>
        </div>
      </li>
    </script>

    <script id="blogIndexTmpl" type="text/x-jsrender">
      <li>
        <ul class="index-ul">
          {^{for indexes}}
            <li><a class="index-li" href="#">{^{:header}}</a></li>
          {{/for}}
        </ul>
      </li>
    </script>

    <div id="share_memo_pre_tmp"></div>
  </body>
</html>


