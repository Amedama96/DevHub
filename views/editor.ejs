<script type="text/javascript">
$(function() {
  // common
  var socket = io.connect('/');

  init_websocket(socket);    

  $('#name').val($.cookie("dev_hub_name"));

  $('#sequence_button').click(function(){ 
    $('#sequence').slideToggle(); 
  });
});
</script>

