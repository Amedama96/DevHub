<html>
  <head>
    <title>DevHub</title>
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript">google.load("jquery", "1.4.4");</script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="/js/client.js"></script>
    <script type="text/javascript" src="/js/suggest.js"></script>

<script type="text/javascript">
$(function() {
  // common
  var socket = io.connect('/');

  init_websocket(socket);    

  $('#sequence_button').click(function(){ 
    $('#sequence').slideToggle(); 
  });
});
</script>

<style type="text/css">
body{
  background-color: #eee;
  line-height: 16px;
  font-size: 12px;
}

a {
  color: dodgerblue;
}

a:hover {
  color: deeppink;
}

#suggest {
  position: absolute;
  background-color: #FFFFFF;
  border: 1px solid #CCCCFF;
  width: 252px;
}

#suggest div {
  padding: 1px;
  display: block;
  width: 250px;
  overflow: hidden;
  white-space: nowrap;
}

#suggest div.select{
  color: #FFFFFF;
  background-color: #3366FF;
}

#suggest div.over{
  background-color: #99CCFF;
}

#wrapper{
  margin: auto;
}

#form {
  padding: 5px;
}

#sequence {
  width: 100%;
  background-color: #fff;
  display: none;
  margin-bottom: 5px;
}


#code {
  width: 100%;
  height: 200px;
  padding: 5px;
  background-color: #fff;
}

#code_out {
  width: 100%;
  height: 800px;
  padding: 5px;
  border: dotted 1px black;
  background-color: #fff;
}

#editor{
  float: left;
  margin-left: 10px;
  width: 62%;
}

#chat{
  float: left;
  width: 35%;
  height: 1000px;
  border: solid 1px black;
  background-color: #fff;
}

#name, #message, #code {
  background-color: aliceblue;
}

#chat_body {
  width: 100%;
  height: 900px;
  overflow-y: auto;
}

#list {
  margin: 0 0 0 2em;
  padding: 0;
  font-weight: bold;
  color: #555;
  line-height: 25px;
  list-style-type: none;
  margin: 0 0 0 5px;
  padding: 0;
}

#login_list {
  width: 100%;
  height: 24px;
  font-size: 11px;
  margin-top: 5px;
}

.login-name , .login-name-pomo , .login-name-system, .login-name-ext, .login-name-pomosys{
  font-weight: bold;
  border: solid 0px;
  padding: 4px;
  margin: 1px;
  border-radius: 4px;        /* CSS3草案 */  
  -webkit-border-radius: 4px;    /* Safari,Google Chrome用 */  
  -moz-border-radius: 4px;   /* Firefox用 */  
}

.login-name{
  color: blue;
  background: -webkit-gradient(linear, left top, left bottom, from(aliceblue), to(lightsteelblue));
  background: -moz-linear-gradient(top, aliceblue,lightsteelblue);
}

.login-name-pomo{
  color: blue;
  background: -webkit-gradient(linear, left top, left bottom, from(antiquewhite), to(tomato));
  background: -moz-linear-gradient(top, antiquewhite,tomato);
}

.login-name-pomosys{
  color: #baa;
  background: -webkit-gradient(linear, left top, left bottom, from(snow), to(mistyrose));
  background: -moz-linear-gradient(top, snow,mistyrose);
}

.login-name-system{
  color: #baa;
  background: -webkit-gradient(linear, left top, left bottom, from(ghostwhite), to(gainsboro));
  background: -moz-linear-gradient(top, ghostwhite,gainsboro);
}

.login-name-ext{
  color: #baa;
  background: -webkit-gradient(linear, left top, left bottom, from(honeydew), to(lightgreen));
  background: -moz-linear-gradient(top, honeydew,lightgreen);
}


</style>

  </head>
  <body>
    <div id="wrapper">
    <h2>DevHub</h2>
    <div id="chat">
      <form id="form">
        <div>
          <div id="login_list"></div>
        </div>

        <input type="text" name="name" id="name" size="3" />
        <input type="text" name="message" id="message" size="40" autocomplete="off" />
        <input type="submit" value="Send" />
        <button id="pomo">Pomo</button>
        <div id="suggest" style="display: none;"></div>
      </form>
      <div id="chat_body">
        <ul id="list"></ul>
      </div>
    </div>
 
    <div id="editor">
      <button id="sequence_button">SequenceChat show/hide</button>
      <div id="sequence"></div>

      <textarea id="code"></textarea>
      <button id="copy_text">Sync</button>
      <textarea readonly id="code_out"></textarea>
    </div>
    <div style="clear: both;"/>
    </div>

  </body>
  <script type="text/javascript" src="http://www.websequencediagrams.com/service.js"></script>
</html>


